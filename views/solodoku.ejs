<html>
    <%- include("includes/head") %>
    <head>
        <link rel = "stylesheet" href = "/styles/css/sudoku.css">
    </head>
    <body onload="startTimer()">
      <%- include("includes/header") %>

      <section class="main-section">

       
        <main>
          <h1>Sudoku</h1>
          <hr>
          <h3><span id="msg"><%- message %></span> <%- pagedata.username %>!</h3>
          <p>Currently playing a game of difficulty: <span id="level"><%- pagedata.diff %></span></p>
          <h2 id = "errors">Score: <span id="score"><%- pagedata.score %></span>
          <span id="minutes"> 00 </span>
          <span id="seconds"> 00 </span>
          <span id="miliseconds"> 000 </span>
          </h2>

          <div id="grid">
            <div class="smallgrid" id="grid-0-0"></div>
            <div class="smallgrid" id="grid-1-0"></div>
            <div class="smallgrid" id="grid-2-0"></div>
            <div class="smallgrid" id="grid-0-1"></div>
            <div class="smallgrid" id="grid-1-1"></div>
            <div class="smallgrid" id="grid-2-1"></div>
            <div class="smallgrid" id="grid-0-2"></div>
            <div class="smallgrid" id="grid-1-2"></div>
            <div class="smallgrid" id="grid-2-2"></div>
          </div>
          <form class="form" method="POST">
              <input type="hidden" value="<%- pagedata.username %>" id="username" name="username">
              <input type="hidden" value="<%- pagedata.password %>" id="password" name="password">
              <button class="logout" type="submit" formaction="/sudoku"><img src="/styles/img/exit.png">Back to menu</button>
              <button type="button" onclick="showHint();"><img src="/styles/img/lamp.png">Show Hint!</button>
              
              <label>Difficulty</label>
              <input type="range" min="1" max="3" value="<%- pagedata.diff %>" id="diff" name="diff">
              <button type="submit" id="startTimer" formaction="/sudoku/solo_game"><img src="/styles/img/refresh.png">New Game</button>
            <!-- onclick="startTimer()" -->
            </div>
          </form>
            
        </main>
       
      </section>
      <%- include("includes/footer") %>
    </body> 

    <script src = "/client_scripts/api-client.js"></script>
    <script src = "/game/sudoku-solver.js"></script>
</html>